<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BABA Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/log.css">
</head>
<body class="fade-in">
    <div class="container-fluid d-flex min-vh-100 p-0">
        <div class="welcome-message col-12 col-md-6 d-flex align-items-center justify-content-center flex-column p-5">
            <img src="img/logo.png" alt="BABA Hardware Store Logo" class="logo mb-4">
            <h1 class="text-white text-center">Welcome to BABA</h1>
            <p class="text-white">Please log in to continue</p>
        </div>
        <div class="login-form col-12 col-md-6 d-flex align-items-center justify-content-center">
            <form id="loginForm" action="/users" method="POST" class="w-50" onsubmit="showLoginAlert(event)">
                <div class="form-group mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required autocomplete="on">
                </div>
                <div class="form-group mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required>
                </div>
                <button type="submit" class="btn btn-danger w-100">Log in</button>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- JavaScript to show an alert on error or success -->
    <script>
        // Function to show alert if error or success query parameter is present
        window.onload = function() {
            const urlParams = new URLSearchParams(window.location.search);
            const error = urlParams.get('error');
            const success = urlParams.get('success'); // Check for success parameter

            if (error) {
                alert(error); // Show error message in an alert box
            } else if (success) {
                alert(success); // Show success message in an alert box
            }
        };

        function showLoginAlert(event) {
            event.preventDefault();  // Prevents the form from submitting immediately
            
            // Display the "Login submitted!" alert message
            alert("Login submitted! Please wait while we process your information.");
            
            // After the alert is closed, the form will be submitted
            document.getElementById('loginForm').submit();  // Submits the form after the alert
        }
    </script>
</body>
</html>
